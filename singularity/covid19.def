Bootstrap: library
From: ubuntu:18.04

%environment
    LC_ALL="C"
    export LC_ALL
    DEBIAN_FRONTEND=noninteractive
    R_BASE_VERSION=3.6.0

%post
apt-get -y install --no-install-recommends --no-install-suggests \
  ca-certificates software-properties-common gnupg2 gnupg1 \
  parallel=20161222-1 libcurl4-openssl-dev libssl-dev libxml2-dev wget
apt-key adv --keyserver keyserver.ubuntu.com --recv-keys E298A3A825C0D65DFD57CBB651716619E084DAB9
add-apt-repository 'deb http://mirrors.dotsrc.org/cran/bin/linux/ubuntu bionic-cran35/'
apt-get update
apt-get -y install r-base=${R_BASE_VERSION}* \
  r-base-dev=${R_BASE_VERSION}* \
  r-recommended=${R_BASE_VERSION}*
